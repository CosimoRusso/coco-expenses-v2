{
  "name": "Coco Expenses V2",
  "dockerComposeFile": "../docker-compose.devcontainer.yml",
  "service": "devcontainer",
  "workspaceFolder": "/coco-expenses",
  "shutdownAction": "stopCompose",
  "postStartCommand": "/coco-expenses/.devcontainer/post_start.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "vue.volar",
        "esbenp.prettier-vscode",
        "mhutchie.git-graph", // Git repository visualizer
        "github.vscode-pull-request-github", // GitHub PR integration
        "donjayamanne.githistory", // Git file history
        "eamodio.gitlens"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "files.exclude": {
          "**/.venv": true,
          "**/__pycache__": true,
          "**/.cache": true,
          "**/.coverage": true,
          "**/.coverage.*": true,
          "**/.hypothesis": true,
          "**/.mypy_cache": true,
          "**/.pytest_cache": true,
          "**/.tox": true
        },
        // PYTHON
        "python.analysis.autoImportCompletions": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.formatOnType": true,
          "editor.formatOnSave": true,
          "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "explicit"
          }
        },
        // python testing
        "python.testing.pytestEnabled": false,
        "python.testing.unittestEnabled": true,
        "python.testing.unittestArgs": [
          "--keepdb",
          "-t",
          "/coco-expenses/backend"
        ],
        "python.testing.cwd": "/coco-expenses/backend/",
        "python.testing.autoTestDiscoverOnSaveEnabled": true,
        // PRETTIER
        "prettier.prettierPath": "/coco-expenses/frontend/coco-expenses-v2-frontend/node_modules/prettier",
        "[javascript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnType": true,
          "editor.formatOnSave": true
        },
        "[typescript]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnType": true,
          "editor.formatOnSave": true
        },
        "[vue]": {
          "editor.defaultFormatter": "esbenp.prettier-vscode",
          "editor.formatOnType": true,
          "editor.formatOnSave": true
        },
        "launch": {
          "configurations": [
            {
              "name": "Django Debug Server (Debug)",
              "consoleName": "Django Debug Server (Debug)",
              "type": "debugpy",
              "request": "launch",
              "program": "${workspaceFolder}/backend/manage.py",
              "args": ["runserver", "0.0.0.0:8000"],
              "django": true,
              "justMyCode": true,
              "python": "/usr/local/bin/python",
              "cwd": "${workspaceFolder}/backend",
              "env": {
                "PYTHONPATH": "/coco-expenses/backend",
                "ROOT_URLCONF": "cocoExpenses.urls",
                "DJANGO_SETTINGS_MODULE": "cocoExpenses.settings"
              },
              "console": "integratedTerminal"
            },
            {
              "name": "Django Tests (Debug)",
              "consoleName": "Django Tests (Debug)",
              "type": "debugpy",
              "request": "launch",
              "program": "${workspaceFolder}/backend/manage.py",
              "args": ["test", "--keepdb", "${input:djangoTestPath}"],
              "django": true,
              "justMyCode": true,
              "python": "/usr/local/bin/python",
              "cwd": "${workspaceFolder}/backend",
              "env": {
                "PYTHONPATH": "/coco-expenses/backend",
                "ROOT_URLCONF": "cocoExpenses.urls",
                "DJANGO_SETTINGS_MODULE": "cocoExpenses.settings"
              },
              "console": "integratedTerminal"
            }
          ],
          "inputs": [
            {
              "id": "djangoTestPath",
              "description": "Test path (e.g., app.tests.test_models)",
              "default": "",
              "type": "promptString"
            }
          ]
        }
      }
    }
  },
  "mounts": [
    "source=/run/host-services/ssh-auth.sock,target=/run/host-services/ssh-auth.sock,type=bind,consistency=cached",
    "source=/Users/cosimorusso/.ssh,target=/root/.ssh,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/run/host-services/ssh-auth.sock"
  },
  "containerEnv": {
    "MANAGE_PY_PATH": "/coco-expenses/backend/manage.py",
    "ROOT_URLCONF": "cocoExpenses.urls",
    "DJANGO_SETTINGS_MODULE": "cocoExpenses.settings",
    "PYTHONPATH": "/coco-expenses/backend"
  }
}
